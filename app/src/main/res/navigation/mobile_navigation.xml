<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="org.fansin.ranobereader.novels.NovelsFragment"
        android:label="@string/title_novels"
        tools:layout="@layout/fragment_novels" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="org.fansin.ranobereader.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="org.fansin.ranobereader.preferences.PreferencesFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_preferences" />
</navigation>